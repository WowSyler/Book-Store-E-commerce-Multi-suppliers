
@{
    ViewBag.Title = "G&O Books Store - Home Page";
}


<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">

                    <div class="categories">
                        <h3 class="text-center">Category</h3>

                        <!--category-productsr-->


                        @foreach (var item in ViewBag.cata)
                        { //catagori yazdırma

                            <ul>
                                <li><a href="@Url.Action("Catagori", "Products" ,new { catID = @item.CategoryID })"> @item.Name</a></li>
                            </ul>

                        }
                        <!--/category-products-->

                    </div>


                </div>
            </div>

            <div class="col-sm-9">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">

                        @foreach (var pro in ViewBag.pro)
                        {
                        <div class="@pro.item">
                      
                            <div class="col-sm-6">

                                <h1><span>@pro.h1  </span>@pro.h11</h1>
                                <h2>@pro.h2</h2>
                                <p>@pro.p</p>
                                <a href="Products/Catagori?catID=@pro.cid" class="btn btn-default get">@pro.b</a>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/images/Promo/@pro.link" class="dutit img-responsive" alt="@pro.alt" />
                              
                                 </div>
                        
                        </div>
                        } 
<!-- -->

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<!--/slider-->

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">

                            
                            <div class="shipping text-center">
                                <!--shipping-->
                                <img src="~/Content/images/home/add.png" alt="" />
                            </div><!--/shipping-->

                        </div>
                    </div>

                    <div class="col-sm-9 padding-right">
                        <div class="features_items">
                            <!--features_items-->
                            <h2 class="title text-center">Newly added books</h2>

                            @foreach (var item in (List<BookStore.Models.Products>)@ViewBag.book)
                            {
                                { Html.RenderPartial("_Products", item); }

                            }

                        </div><!--features_items-->



                        <div class="recommended_items">
                            <!--recommended_items-->
                            <h2 class="title text-center">Recommended Books</h2>

                            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="item active">

                                        @foreach (var item in (List<BookStore.Models.Products>)@ViewBag.rec) {
                                            { Html.RenderPartial("_recommended", item); }
                                        }

                                    </div>
                                    <div class="item">

                                        @foreach (var item in (List<BookStore.Models.Products>)@ViewBag.rec2)
                                        {
                                            { Html.RenderPartial("_recommended", item); }
                                        }

                                    </div>
                                </div>
                                <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </div><!--/recommended_items-->

                    </div>
                </div>
    </div>
  
</section>