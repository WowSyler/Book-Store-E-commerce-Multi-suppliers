<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="G&O BOOKS STORE">
    <meta name="author" content="">

    <title>@ViewBag.Title - Book Store </title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/price-range.css" rel="stylesheet">
    <link href="~/Content/css/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet">
    <link href="~/Content/css/main.css" rel="stylesheet">
    <link href="~/Content/css/responsive.css" rel="stylesheet">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/js/html5shiv.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

   
    <link rel="shortcut icon" href="~/Content/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="~/Content/images/ico/apple-touch-icon-57-precomposed.png">


    <script type="text/javascript">
        $(function () {
            $("#search").autocomplete({
                source: '@Url.Action("Search", "Product")'
            });
        });
    </script>

</head><!--/head-->
<body >


    <header  id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-8">
                       
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> +90 546 88 82</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> info@gobookstore.com</a></li>
                            </ul>
                        
                    </div>
                    <div class="col-sm-4">

                    </div>
                </div>
            </div>
        </div><!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="logo pull-left">
                            <a href="@Url.Action("Index","Home")"><img src="~/Content/images/home/logo.png" alt="" /></a>
                        </div>
                     
                    </div>
                    <div class="col-sm-6">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                               @if (Session["username"]  != null)
                               {
                                <li><a href="@(Session["username"] != null ? Url.Action("Detail", "Accounts", new {user =Session["username"] }): Url.Action("Index", "Accounts"))"><i class="fa fa-user"> </i>My Account : @Session["username"]</a></li>
                                <li class="hidden-xs"><a href="@Url.Action("Index", "Cart", new { user = Session["username"] })"><i class="fa fa-shopping-cart"> </i> My Cart @if (@ViewBag.NoOfItem > 0) { <text>(@ViewBag.NoOfItem)</text> }</a></li>
                                <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "CheckOut", new { user = Session["username"] }) : Url.Action("Index", "Accounts"))"><i class="fa fa-dribbble"> </i> Checkout</a></li>
                               }
                                @if (Session["username"] == null)
                                {
                                    <li><a href="@Url.Action("Index","Accounts")"> <i class="fa fa-lock"> </i>Login Or Signup</a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("Logout","Accounts")"> <i class="fa fa-lock"> </i>Logout</a></li>        
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->
  
            <div class="header_bottom">
                <div >
                    <div class="menu">
                        <ul >
                            <li> @Html.ActionLink("Home Page", "Index", "Home")  </li>
                            <li>  @Html.ActionLink("All Books List", "Index", "Products" )  </li>
                            <li> @Html.ActionLink("Contact", "Contact", "Home")  </li>
                         
                        </ul>
                    </div>
                </div>

            <div >
                <div class="search_box pull-right">
                    @using (Html.BeginForm("Search", "Products", FormMethod.Get))
                    {
                        <input type="text" placeholder="Search" name="product" id="search" />
                    }
                </div>
            </div>


            
            <div class="clear"></div>
        </div><!--/header-bottom-->
        
         <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                      
                </div>
            </div>
        </div><!--/ Bosluk-->
        
</header><!--/header-->


    @RenderBody()


    <footer id="footer">
        <!--Footer-->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="companyinfo">
                            <h2><span>G&O </span>-BOOKS STORE</h2>
                            <p>The book is everything</p>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        </div>
                   

                        <div class="col-sm-3">
                            <div class="address ">
                                <img src="~/Content/images/home/map.png" alt="" />
                                <p>______   Everywhere in Turkey _____</p>
                            </div>
                        </div>
                    </div>
            </div>
        </div>

        <div class="footer-widget">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="single-widget">
                            
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            
                            <h2>Service</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>

                            </ul>
                                
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>Suppliers</h2>
                            <ul class="nav nav-pills nav-stacked">
                                
                                <li><a href="@Url.Action("LoginSupp", "Suppliers")">Login Supliers</a></li>
                                <li><a href="@Url.Action("Register", "Suppliers")">Register Supliers</a></li>
                               
                                
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="single-widget">
                            <h2>About Shopper</h2>
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#">Company Information</a></li>
                                <li><a href="#">Copyright</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3 col-sm-offset-1">
                        <div class="single-widget">
                            <h2>About G&O Books Store</h2>
                            <form action="#" class="searchform">
                                <input type="text" placeholder="Your email address" />
                                <button type="submit" class="btn btn-default"><i class="fa fa-arrow-circle-o-right"></i></button>
                                <p>Get the most recent updates from <br />our site and be updated your self...</p>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <p class="pull-left">Copyright © 2017 E-BookStore Inc. All rights reserved.</p>
                    <p class="pull-right">Designed by <span>G&O</span></p>
                </div>
            </div>
        </div>

    </footer><!--/Footer-->


    <script src="~/Scripts/js/jquery.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery.scrollUp.min.js"></script>
    <script src="~/Scripts/js/price-range.js"></script>
    <script src="~/Scripts/js/jquery.prettyPhoto.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    
</body>
</html>