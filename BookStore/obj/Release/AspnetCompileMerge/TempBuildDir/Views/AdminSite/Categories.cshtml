@model IEnumerable<BookStore.Models.Categories>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row mt">

            <div class="col-lg-12">
                <h2>List Books</h2>
                <div class="form-panel">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "UpdateCata", new { id = item.CategoryID, Ladmin = Session["admin"] }) |
                                    @Html.ActionLink("Delete", "Deletecata", new { id = item.CategoryID , Ladmin = Session["admin"] })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div>
                    @Html.ActionLink("Back to Home", "Home", "Admin", new { Ladmin = Session["admin"] }) <br />
                    <a href="@Url.Action("CreateCata","AdminSite",new { Ladmin = Session["admin"] })">Create Categoriest</a>
                </div>
            </div>
        </div>
    </section>
</section>


@{
    TempData["reee"] = Request.RawUrl;
}