@model BookStore.Models.Suppliers

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LSupp.cshtml";
}



<section class="wrapper">
    <section id="main-content">
    <div class="row mt">
        <div class="col-lg-12">
            <div class="content-panel">
                <h4><i class="fa fa-angle-right"></i> Supplier All info</h4>
                @Html.HiddenFor(model => model.SupplierID)
                <section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.SurName)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.Address)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.Phone)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.Email)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.City)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.Country)</th>
                                <th class="numeric">@Html.DisplayNameFor(model => model.UserName)</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.SurName)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.Address)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.Phone)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.Email)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.City)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.Country)</td>
                                <td class="numeric">@Html.DisplayFor(model => model.UserName)</td>
                               
                            </tr>
                        </tbody>
                    </table>
                </section>
                <p>
                    @Html.ActionLink("Update", "UpdateSupp", new { id = Model.SupplierID, supp = Session["suppname"] })
                    |
                    @Html.ActionLink("Back to List", "Index",new { id = Model.SupplierID, supp = Session["suppname"] })
                </p>
            </div>
        </div>
    </div>
  </section>
</section>
  
            
      
           
     
            
